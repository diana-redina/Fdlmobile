<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fdlmobile.ShopInfo">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <BoxView Grid.Row="0" BackgroundColor="LightCyan"  CornerRadius="15" Margin="10"/>
            <Label Grid.Row="0" TextColor="Gray" HorizontalTextAlignment="Center" FontSize="40" VerticalTextAlignment="Center"  Text="Наш магазин FdL находится по адресу"/>
            <Label Grid.Row="1" TextColor="Black"  HorizontalTextAlignment="Center" FontSize="25" VerticalTextAlignment="Center"  Text="город Москва, Костомаровская набережная 29с1"/>
            <Label Grid.Row="2" TextColor="Black" FontSize="25" VerticalTextAlignment="Center"  HorizontalTextAlignment="Center"  Text="Оформить заказ или узнать наличие наших прекрасных цветочков можно по телефону"/>
            <Label Grid.Row="3" TextColor="Black" FontSize="20" VerticalTextAlignment="Center"  HorizontalTextAlignment="Center" Text="Телефон +79999999999"/>
            
        </Grid>
    </ContentPage.Content>
</ContentPage>